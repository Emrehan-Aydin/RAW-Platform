@model LoginRequestDto
@{

    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
<!-- Sweet Alerts js -->
<script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />


@if (@Model.Message != null) {
    <script>
        if ("@Model.IsSucceed" == "true") {
            Swal.fire({
                title: "Başarılı", text: "@Html.Raw(Model.Message)", icon: "success", showCancelButton: !0, confirmButtonColor: "#5664d2", cancelButtonColor: "#ff3d60"
            });
        }
        else {
            Swal.fire({
                title: "Hata", text: "@Html.Raw(Model.Message)", icon: "error", showCancelButton: !0, confirmButtonColor: "#5664d2", cancelButtonColor: "#ff3d60"
            })
        }

    </script>
}

<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Login") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="75" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="75" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>
                                        <h4 class="font-size-18 mt-4">Hoşgeldiniz</h4>
                                        <p class="text-muted">Devam etmek için giriş yapın</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form method="post" asp-action="Login" asp-controller="Login">

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                <label for="username">Kullanıcı Adı</label>
                                                <input type="text" class="form-control" id="username" placeholder="Enter username" asp-for="@Model.UsernameOrEmail">
                                            </div>

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label for="userpassword">Şifre</label>
                                                <input type="password" class="form-control" id="userpassword" placeholder="Enter password" asp-for=@Model.Password>
                                            </div>

                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="customControlInline">
                                                <label class="form-check-label" for="customControlInline">Beni Hatırla</label>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <button id="LoginButton" class="btn btn-primary w-md waves-effect waves-light" type="submit">Giriş Yap</button>
                                            </div>

                                            <div class="mt-4 text-center">
                                                <a href=@Url.Action("Index", "AuthRecoverpw") class="text-muted"><i class="mdi mdi-lock me-1"></i> Şifremi unuttum?</a>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>Kayıt Olmak İster Misin? <a href=@Url.Action("Register") class="fw-medium text-primary"> Kayıt Ol </a> </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>
